<%=question_form doop, res do %>
  <%=question "/page/about_you" do |root, answer| %>

    <%=question "/page/about_you/your_name" do |root,answer| %>
      <div class="textfield">
        <label for="title">Title (eg. Mrs, Miss, Ms, Mr or Dr)</label>
        <input id="title" name="b_title" type="text" value="<%=answer["title"]%>"/>
      </div>

      <div class="textfield">
        <label for="firstname">Your fistname</label>
        <input id="firstname" name="b_firstname" type="text" value="<%=answer["firstname"]%>"/>
      </div>

      <div class="textfield">
        <label for="middlenames">Middlename(s)</label>
        <input id="middlenames" name="b_middlenames" type="text" value="<%=answer["middlenames"]%>"/>
      </div>

      <div class="textfield">
        <label for="surname">Your surname or family name</label>
        <input id="surname" name="b_surname" type="text" value="<%=answer["surname"]%>"/>
      <br/>
      <button>Continue</button><br/>
    <% end %>

    <%=question "/page/about_you/known_by_other_name" do |root,answer| %>
      <p>This includes your maiden name.</p>
      <button name="b_answer" value="Yes">Yes</button><br/>
      <button name="b_answer" value="No">No</button>
    <% end %>

    <%=question "/page/about_you/previous_name" do |root,answer| %>
      <div class="textfield">
        <label for="previousname">Include your maiden name</label>
        <input id="previousname" name="b_answer" type="text" value="<%=answer%>"/>
      </div>
      <button>Continue</button>
    <% end %>

    <%=question "/page/about_you/dob" do |root,answer| %>
      <div class="textfield">
        <label for="dob">DD/MM/YYYY</label>
        <%=error res, :dob_error %>
        <input id="dob" name="b_answer" type="text" value="<%=answer%>"/>
      </div>
      <button>Continue</button>
    <% end %>

    <%=question "/page/about_you/your_address" do |root,answer| %>

      <div class="textfield">
        <label for="address1">Address</label>
        <input id="address1" type="text" name="b_address1" value="<%=answer['address1']%>"/>
      </div>
      <div class="textfield">
        <input id="address2" type="text" name="b_address2" value="<%=answer['address2']%>"/>
      </div>

      <div class="textfield">
        <input id="address3" type="text" name="b_address3" value="<%=answer['address3']%>"/>
      </div>
      <div class="textfield">
        <label for="postcode">Postcode</label>
        <input id="postcode" type="text" name="b_postcode" value="<%=answer['postcode']%>"/>
      </div>
      <button>Continue</button>

    <% end %>

    <%=question "/page/about_you/lived_at_address_for_more_than_12_months" do |root,answer| %>
      <button name="b_answer" value="Yes">Yes</button><br/>
      <button name="b_answer" value="No">No</button>
    <% end %>

    <%=question "/page/about_you/last_address" do |root,answer| %>

      <div class="textfield">
        <label for="address1">Address</label>
        <input id="address1" type="text" name="b_address1" value="<%=answer['address1']%>"/>
      </div>
      <div class="textfield">
        <input id="address2" type="text" name="b_address2" value="<%=answer['address2']%>"/>
      </div>

      <div class="textfield">
        <input id="address3" type="text" name="b_address3" value="<%=answer['address3']%>"/>
      </div>
      <div class="textfield">
        <label for="postcode">Postcode</label>
        <input id="postcode" type="text" name="b_postcode" value="<%=answer['postcode']%>"/>
      </div>
      <button>Continue</button>

    <% end %>

    <%=question "/page/about_you/your_phone_numbers" do |root,answer| %>

      <div class="textfield">
        <label for="daytime">Daytime phone number</label>
        <input id="daytime" type="text" name="b_daytime" value="<%=answer['daytime']%>"/>
      </div>
      <div class="textfield">
        <label for="evening">Evening phone number</label>
        <input id="evening" type="text" name="b_evening" value="<%=answer['evening']%>"/>
      </div>
      <button>Continue</button>
    <% end %>

    <%=question "/page/about_you/have_nino" do |root,answer| %>
      <button name="b_answer" value="Yes">Yes</button><br/>
      <button name="b_answer" value="No">No</button>
    <% end %>

    <%=question "/page/about_you/nino" do |root,answer| %>
      <div class="textfield">
        <label for="answer">Example of a National Insurance number is 00 12 34 56 A</label>
        <input id="answer" type="text" name="b_answer" value="<%=answer%>"/>
      </div>
      <button>Continue</button>
    <% end %>

    <% when_answered "/page/about_you" do %>
      <button>Continue and Save</button>
    <% end %>
  <% end %>

<% end %>
